<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/lib_base_dp_tab_padding">

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="@dimen/lib_base_dp_tab_icon"
        android:layout_height="@dimen/lib_base_dp_tab_icon" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_base_dp_tab_margin"
        android:textSize="@dimen/lib_base_dp_tab_text_size" />

</LinearLayout>